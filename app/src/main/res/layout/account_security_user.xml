<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <!-- Top Bar with Title -->
    <LinearLayout
        android:id="@+id/layout_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C8A4A4"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/iv_back_account_security_user"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:src="@drawable/back_1"
            app:tint="@color/your_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Tài khoản &amp; Bảo mật"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#EBE1E1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Thông tin cá nhân -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <!-- Các EditText thông tin -->
            <EditText
                android:id="@+id/et_first_name_account_security_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Họ"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#605B5B"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_last_name_account_security_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Tên"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#625E5E"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_name_account_security_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Tên tài khoản"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#625E5E"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_email_account_security_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#625E5E"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_phone_account_security_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Phone"
                android:inputType="phone"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#625E5E"
                android:textSize="15dp" />

            <!-- Bảo mật -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Bảo mật"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_current_password_account_security_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="MẬT KHẨU HIỆN TẠI"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#625E5E"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_new_password_account_security_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="MẬT KHẨU MỚI"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#625E5E"
                android:textSize="15dp" />

            <EditText
                android:id="@+id/et_confirm_password_account_security_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="XÁC NHẬN MẬT KHẨU MỚI"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="#000000"
                android:textColorHint="#625E5E"
                android:textSize="15dp" />

            <!-- Nút Lưu -->
            <Button
                android:id="@+id/bt_save_account_security_user"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="32dp"
                android:text="Lưu thay đổi"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:backgroundTint="@color/your_color"
                android:gravity="center" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
