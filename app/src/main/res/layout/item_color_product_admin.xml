<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/item_border_account_no_click">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivColorPreview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/item_border_account_no_click"
            android:src="@drawable/shoes"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvColorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đen"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvProductCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PD-BLK-001"
                android:textColor="#4B4747"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="SL: 20"
            android:textColor="#4B4747"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvColorStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Có sẵn"
            android:textColor="#008000"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivEditColor"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            android:src="@mipmap/edit" />

        <ImageView
            android:id="@+id/ivDeleteColor"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/delete_foreground" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>