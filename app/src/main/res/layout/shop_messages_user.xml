<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5E5E5"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#F5E5E5"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back_shop_messages_user"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/back_1"
                app:tint="@color/your_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_name_shop_messages_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MK.shop"
                    android:textColor="#000"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/constraint_layout_messages"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_suggest_shop_messages_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E5C9C5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#8C7676"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:id="@+id/iv_image_product_shop_messages_user"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/shoes1" />
                </androidx.cardview.widget.CardView>
                <!-- Shoe image -->

                <!-- Product info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name_product_shop_message_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Giày Jordan"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_price_product_shop_messages_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="300,000 đ"
                        android:textColor="#D0494E"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Buy now button -->
                <Button
                    android:id="@+id/bt_ask_shop_messages_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#E2D6D6"
                    android:text="Hỏi sản phẩm"
                    android:textColor="#D0494E"
                    android:textSize="13sp" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc_message_shop_messages_user"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:background="@android:color/white"
                android:padding="10dp" />

            <LinearLayout
                android:id="@+id/ll_tip_shop_messages_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:paddingLeft="5dp"
                android:paddingRight="5dp">

                <TextView
                    android:padding="5dp"
                    android:id="@+id/tv_tip_1_shop_messages_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/item_border_account"
                    android:gravity="end"
                    android:text="Sản phẩm này còn không ?"
                    android:textColor="#040404"
                    android:textSize="12sp" />

                <TextView
                    android:padding="5dp"
                    android:id="@+id/tv_tip_2_shop_messages_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/item_border_account"
                    android:gravity="end"
                    android:text="Sản phẩm còn màu khác không ?"
                    android:textColor="#040404"
                    android:textSize="12sp" />

                <TextView
                    android:padding="5dp"
                    android:id="@+id/tv_tip_3_shop_messages_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/item_border_account"
                    android:gravity="end"
                    android:text="Sản phẩm còn size khác không ?"
                    android:textColor="#040404"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/nenduoi"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/iv_add_shop_messages_user"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:padding="4dp"
                android:src="@drawable/add_circle" />

            <EditText
                android:id="@+id/et_edit_shop_messages_user"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="10"
                android:background="@drawable/bg_input"
                android:hint="Soạn tin"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textColor="#050505"
                android:textColorHint="#6A6161"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_send_shop_messages_user"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:padding="1dp"
                android:src="@drawable/send" />
        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_load_shop_messages_user"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
