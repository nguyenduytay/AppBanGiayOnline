<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_border_account"
    android:padding="8dp"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/tv_user_avatar_item_list_message_admin"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/item_brand_home_user"
        android:gravity="center"
        android:padding="0dp"
        android:text="N"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_user_name_item_list_message_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_user_avatar_item_list_message_admin"
        app:layout_constraintTop_toTopOf="@id/tv_user_avatar_item_list_message_admin"
        tools:text="Nguyễn Văn A" />

    <TextView
        android:id="@+id/tv_last_message_item_list_message_admin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#281F1F"
        android:textSize="13sp"
        app:layout_constraintEnd_toStartOf="@id/tv_unread_count_item_list_message_admin"
        app:layout_constraintStart_toEndOf="@id/tv_user_avatar_item_list_message_admin"
        app:layout_constraintTop_toBottomOf="@id/tv_user_name_item_list_message_admin"
        tools:text="Xin chào shop, tôi muốn hỏi về sản phẩm..." />

    <TextView
        android:id="@+id/tv_message_time_item_list_message_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#281F1F"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_user_avatar_item_list_message_admin"
        tools:text="Hôm nay 15:30" />

    <TextView
        android:id="@+id/tv_unread_count_item_list_message_admin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@mipmap/dot_foreground"
        android:gravity="center"
        android:text="5"
        android:padding="0dp"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/tv_last_message_item_list_message_admin"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>