<?xml version="1.0" encoding="utf-8"?>
<!-- item_message_shop.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="start"
    android:paddingVertical="8dp">
    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="4dp">
        <ImageView
            android:id="@+id/avatar_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/avatar" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/tv_message_content__receive_shop_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_message_shop"
            android:text="Message shop"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="14sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_gravity="start"
            android:layout_marginTop="4dp">
            <TextView
                android:id="@+id/tv_message_status_receive_shop_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã gửi"
                android:textColor="#999"
                android:textSize="11sp"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" . "
                android:textColor="#999"
                android:layout_gravity="bottom"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/tv_message_time__receive_shop_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="T7"
                android:textColor="#999"
                android:layout_marginLeft="5dp"
                android:textSize="11sp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>